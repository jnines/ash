#!/bin/bash
dc="/usr/local/bin/docker-compose -f /home/jason/docker/unifi.yml"
unif="/home/jason/docker/unifi"
bunif="/home/jason/Data/unifi_backups/unifi.$(date +"%m.%d.%y-%I.%M")"

cd /home/jason/docker || exit
$dc stop unifi &&
cp -a "$unif" "$bunif" &&
$dc start unifi &&
$dc pull unifi &&
$dc up -d
