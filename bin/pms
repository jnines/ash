#!/bin/bash

IFS=$'\n'
stream=( $(curl -s http://10.10.10.8:32400/status/sessions | xmlstarlet sel -t -m "//MediaContainer" -v '@size' -nl -m "//Video" -v '@title' ) )

if [[ "${stream[0]}" == "0" ]]; then
    echo "Nothing Playing"
else
    echo Playing : "${stream[1]}" | sed -e "s/\&#39;/\'/" -e "s/\&amp;/\&/"
fi
